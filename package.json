{
  "name": "nexid",
  "version": "0.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "prepublish": "npm run clean && npm run build",
    "clean": "rm -rf dist",
    "build": "npx tsc",
    "test": "tsx test/nexid.test.ts",
    "benchmark": "node test/benchmark.js",
    "bundle": "node esbuild.mjs",
    "bundle:node": "esbuild src/index.ts --bundle --platform=node --outfile=dist/bundle-node.js",
    "bundle:web": "esbuild src/index.ts --bundle --platform=browser --minify --sourcemap --outfile=dist/bundle-web.js"
  },
  "keywords": [
    "id",
    "uuid",
    "nexid",
    "identifier",
    "unique",
    "typescript",
    "global",
    "sortable"
  ],
  "author": "Thomas LE JEUNE",
  "license": "MIT",
  "description": "Fast, time-sortable unique identifiers for the JavaScript ecosystem. Port of the original Go library github/rs/xid by Olivier Poitrey.",
  "devDependencies": {
    "@types/node": "^22.13.9",
    "esbuild": "0.25.0",
    "hyperid": "^3.3.0",
    "ksuid": "^3.0.0",
    "nanoid": "^5.1.2",
    "shortid": "^2.2.17",
    "tinybench": "^3.1.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "ulid": "^2.3.0",
    "uuid": "^11.1.0"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomastheyoung/nexid.git"
  },
  "bugs": {
    "url": "https://github.com/thomastheyoung/nexid/issues"
  },
  "homepage": "https://github.com/thomastheyoung/nexid#readme"
}

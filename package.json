{
  "name": "nexid",
  "version": "1.0.0",
  "author": "Thomas LE JEUNE <thomastheyoung@gmail.com>",
  "license": "MIT",
  "description": "Fast, time-sortable unique identifiers for the JavaScript ecosystem. Port of the original Go library github/rs/xid by Olivier Poitrey.",
  "files": [
    "LICENSE",
    "README.md"
  ],
  "bin": "./bin/nexid.js",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "unpkg": "./dist/esm/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "npm publish",
    "prepublishOnly": "git push origin --follow-tags",
    "build": "rm -rf dist && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "bundle": "rm -rf bin && node esbuild.mjs",
    "benchmark": "node tests/benchmark.js",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/deno": "^2.2.0",
    "@types/node": "^22.13.9",
    "esbuild": "0.25.0",
    "hyperid": "^3.3.0",
    "ksuid": "^3.0.0",
    "nanoid": "^5.1.2",
    "shortid": "^2.2.17",
    "tinybench": "^3.1.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "ulid": "^2.3.0",
    "uuid": "^11.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": "20 || >=22"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomastheyoung/nexid.git"
  },
  "bugs": {
    "url": "https://github.com/thomastheyoung/nexid/issues"
  },
  "homepage": "https://github.com/thomastheyoung/nexid#readme",
  "keywords": [
    "id",
    "uuid",
    "nexid",
    "identifier",
    "unique",
    "typescript",
    "global",
    "sortable"
  ]
}
